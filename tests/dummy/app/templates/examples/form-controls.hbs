<div class="slds-grid slds-grid--pull-padded-medium slds-m-horizontal--x-small">
  <div class="slds-col slds-p-around--small">
    <div class="slds-box slds-box--small slds-theme--shade">
      <div class="slds-text-heading--large">Inputs</div>

      {{#slds-control label='Required Field' isRequired=true as |control|}}
        {{control.input placeholder='placeholder text'}}
      {{/slds-control}}

      {{#slds-control label='Error Field' isRequired=true isError=true errorMessage='you forgot to select the doodat' as |control|}}
        {{control.input placeholder='placeholder text'}}
      {{/slds-control}}

      {{#slds-control label='Disabled Field' as |control|}}
        {{control.input placeholder='placeholder text' isDisabled=true}}
      {{/slds-control}}

      {{#slds-control label='Text Area' as |control|}}
        {{control.textarea placeholder='placeholder text'}}
      {{/slds-control}}

      {{#slds-control label='Input with left icon' as |control|}}
        {{#control.input placeholder='placeholder text' icon='left' as |input|}}
          {{input.icon-left icon='user'}}
          {{input.textbox}}
        {{/control.input}}
      {{/slds-control}}

      {{#slds-control label='Input with left icon' as |control|}}
        {{#control.input placeholder='placeholder text' icon='right' as |input|}}
          {{input.textbox}}
          {{input.icon-right icon='search'}}
        {{/control.input}}
      {{/slds-control}}

      {{#slds-control label='Input with icons and buttons' as |control|}}
        {{#control.input placeholder='placeholder text' icon='leftRight' as |input|}}
          {{input.icon-left}}
          {{input.textbox}}
          {{input.button-right}}
        {{/control.input}}
      {{/slds-control}}

      <div class="slds-text-heading--large">Other Controls</div>

      {{#slds-control as |control|}}
        {{control.checkbox label='Awesome Check' isChecked=isAwesome checked=(action 'toggle' 'isAwesome')}}
      {{/slds-control}}

      {{#slds-control isRequired=true as |control|}}
        {{control.checkbox label='Awesome Check Required' isChecked=isAwesome checked=(action 'toggle' 'isAwesome')}}
      {{/slds-control}}

      {{#slds-control isRequired=true isError=true errorMessage='you goofed' as |control|}}
        {{control.checkbox label='Awesome Check Error' isChecked=isAwesome checked=(action 'toggle' 'isAwesome')}}
      {{/slds-control}}

      {{#slds-control isRequired=true as |control|}}
        {{control.checkbox-toggle label='Toggler' isChecked=isAwesome checked=(action 'toggle' 'isAwesome')}}
      {{/slds-control}}

      {{#slds-control-group isRequired=true legend='Choose your fate' name='fate' as |control|}}
        {{control.radio label="Butter" value='butter' selected=(action 'choose' 'butter')}}
        {{control.radio label="Batter" value='batter' selected=(action 'choose' 'batter')}}
        {{control.radio isDisabled=true label="Better" value='better' selected=(action 'choose' 'better')}}
      {{/slds-control-group}}

      {{#slds-control-group isRequired=true legend='Choose all your fates' name='fates' as |control|}}
        {{control.checkbox label='Cake' isChecked=cake checked=(action 'toggle' 'cake')}}
        {{control.checkbox label='Death' isChecked=death checked=(action 'toggle' 'death')}}
        {{control.checkbox label='Life' isDisabled=true isChecked=life checked=(action 'toggle' 'life')}}
      {{/slds-control-group}}

      {{#slds-control-group isRequired=true legend='Music' name='music' isError=true errorMessage='you forgot to select the doodat' as |control|}}
        {{control.radio label="Rock" value='rock' selected=(action 'chooseMusic' 'rock')}}
        {{control.radio label="Not Rock" value='notRock' selected=(action 'chooseMusic' 'notRock')}}
      {{/slds-control-group}}

      {{#slds-control-group isRequired=true legend='Games' name='games' isError=true errorMessage='you forgot to select the doodat' as |control|}}
        {{control.checkbox label='Chess' isChecked=chess checked=(action 'toggle' 'chess')}}
        {{control.checkbox label='Checkers' isChecked=checkers checked=(action 'toggle' 'checkers')}}
      {{/slds-control-group}}

      {{#slds-control-group legend='Favorite pet' as |control|}}
        <div class="slds-radio_button-group">
          {{control.radio-button label='Cats' selected=(action 'choosePet' 'cats')}}
          {{control.radio-button label='Dogs' selected=(action 'choosePet' 'dogs')}}
          {{control.radio-button label='Horses' isDisabled=true}}
        </div>
      {{/slds-control-group}}

      {{#slds-control-group legend='Least Favorite pet' as |control|}}
        <div class="slds-checkbox_button-group">
          {{control.checkbox-button label='Lizard' checked=(action 'choosePet' 'cats')}}
          {{control.checkbox-button label='Snake' checked=(action 'choosePet' 'dogs')}}
          {{control.checkbox-button label='Dragon' isDisabled=true}}
        </div>
      {{/slds-control-group}}
    </div>
  </div>
  <div class="slds-col slds-p-around--small">
    <div class="slds-box slds-box--small slds-theme--shade">

      <div class="slds-list--horizontal slds-wrap">
        <div class="slds-item--label slds-text-color--weak slds-truncate" title="isAwesome">Is Awesome</div>
        <div class="slds-item--detail slds-truncate">{{isAwesome}}</div>

        <div class="slds-item--label slds-text-color--weak slds-truncate" title="Fate">Fate</div>
        <div class="slds-item--detail slds-truncate">{{fate}}</div>

        <div class="slds-item--label slds-text-color--weak slds-truncate" title="Cake">Cake</div>
        <div class="slds-item--detail slds-truncate">{{cake}}</div>

        <div class="slds-item--label slds-text-color--weak slds-truncate" title="Death">Death</div>
        <div class="slds-item--detail slds-truncate">{{death}}</div>

        <div class="slds-item--label slds-text-color--weak slds-truncate" title="Pet">Pet</div>
        <div class="slds-item--detail slds-truncate">{{pet}}</div>
      </div>
    </div>
  </div>
</div>