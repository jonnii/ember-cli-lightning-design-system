{{validations.attrs.username.isError}}
{{username}}
{{#slds-box}}
  {{#slds-form as |form|}}
    {{#form.control label='Username' 
      isError=(not validations.attrs.username.isValid) 
      errorMessage=validations.attrs.username.messages as |control|}}
      {{control.input value=username placeholder="Placeholder Text"}}
    {{/form.control}}

    {{#form.control label='Search' as |control|}}
      {{#control.input value=search placeholder="Search..." as |input|}}
        {{input.input}}
      {{/control.input}}
    {{/form.control}}

    {{#form.control label='Search' as |control|}}
      {{control.combo value=search placeholder="Search..."}}
    {{/form.control}}

    {{#form.control label='Text Input' as |control|}}
      {{control.textarea placeholder="Placeholder Text"}}
    {{/form.control}}
    
    {{#form.control-group legend='Checkbox Group label' as |control|}}
      {{control.checkbox label='All opportunities owned by you'}}
      {{control.checkbox label='All contacts in the account owned by you'}}
    {{/form.control-group}}

    {{#form.control-group legend='Checkbox Group label' as |control|}}
      {{control.checkbox label='Lead Generation'}}
      {{control.checkbox label='Education Leads'}}
    {{/form.control-group}}
  {{/slds-form}}  
{{/slds-box}}