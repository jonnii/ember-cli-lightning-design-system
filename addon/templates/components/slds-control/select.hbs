<select
  id={{formElementId}}
  class="slds-select"
  disabled={{isDisabled}}
  onchange={{action 'selectedOptionChanged' value="target.value"}}>
  <option value="">{{prompt}}</option>

  {{#each selectableOptions as |opt|}}
    <option value={{opt.value}} selected={{opt.isSelected}}>
      {{opt.name}}
    </option>
  {{/each}}
</select>